<div id="section-taller">
    <div class="container head-section">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center gtco-heading animate-box">
                <br><br>
                <h2 class="colorazul">TALLERES</h2>
                <p>Ofrecemos talleres personalizados los cuales incluyen Certificado</p>
            </div>
        </div>

    </div>
    <div class="container">
        <div class="row">
        {% for k,item in talleres %}
            <div class="col-md-4 col-sm-6">
                <div class="team-member">
                    {% if item.dini|date('Y-m-d') > "now"|date('Y-m-d')%}
                    <div class="proximo-taller"><i class="fa fa-bookmark"></i><br> Próximo taller</div>
                    {% endif %}
                    <div class="team-img">
                        <img src="{{asset('uploads/')}}{{item.imagen}}" alt="team member" class="img-responsive">
                    </div>
                    <div class="team-hover">
                        <div class="desk">
                            <h4>{{item.title}}</h4>
                            <p>{{item.summary}}</p>
                        </div>
                        <div class="s-link">
                            {% if item.dini|date('Y-m-d') >= "now"|date('Y-m-d')%}
                            <a href="{{path('reservar_cita',{'tipo':'1','opt':item.id,'msj':'0'})}}" class="btn btn-blue"><i class="fa fa-calendar"></i> Reservar cupo</a>
                            {% endif %}
                            <a href="{{path('taller_info')}}/{{item.slug}}" class="btn btn-blue"><i class="fa fa-eye"></i> Ver más</a>
                        </div>
                    </div>
                </div>
                <div class="team-title">

                    <h5><a href="{{path('taller_info')}}/{{item.slug}}">{{item.title}}</a></h5>
                    <span>{{item.summary}} - {{item.dini|date('d M Y')}}</span>
                </div>
            </div>
        {% endfor %}
        </div>

    </div>
